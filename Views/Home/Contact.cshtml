@{
    ViewData["Title"] = "Contact Us";
}

@section Styles {
<style>
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h2:not(.card h2),
    [data-theme="dark"] h5:not(.card h5),
    [data-theme="dark"] p:not(.card p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White cards in dark mode need dark text */
    [data-theme="dark"] .card,
    [data-theme="dark"] .card-body {
        background-color: white !important;
        color: #1f2937 !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .card * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .card .text-muted {
        color: #6b7280 !important;
    }
</style>
}

<div class="container py-4">
    <h2>Contact Us</h2>
    <p class="lead">Get in touch with our team</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-phone"></i> Phone</h5>
                    <p>+1 (555) 123-4567</p>
                    
                    <h5><i class="fas fa-envelope"></i> Email</h5>
                    <p>info@carrentalpro.com</p>
                    
                    <h5><i class="fas fa-map-marker-alt"></i> Address</h5>
                    <p>123 Rental Street<br>City, State 12345</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5>Business Hours</h5>
                    <p>Monday - Friday: 9:00 AM - 6:00 PM<br>
                    Saturday: 10:00 AM - 4:00 PM<br>
                    Sunday: Closed</p>
                    <p class="text-muted">Online bookings available 24/7</p>
                </div>
            </div>
        </div>
    </div>
</div>

