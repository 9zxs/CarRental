@model dynamic
@{
    ViewData["Title"] = "DriveLuxe - Generative Experience";
    var evCars = ViewBag.EVCars as List<Car> ?? new List<Car>();
    var promotions = ViewBag.Promotions as List<Promotion> ?? new List<Promotion>();
    var states = ViewBag.States as List<string> ?? new List<string>();
    var selectedState = ViewBag.SelectedState as string;
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
        --primary-dark: #0d4ab8;
        --secondary: #9CA3AF;
        --dark: #030712;
        --light: #F9FAFB;
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background-color: var(--light);
        color: #333;
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    /* Dark mode override for homepage */
    [data-theme="dark"] body {
        background-color: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .hero-section {
        background: linear-gradient(135deg, rgba(19, 91, 236, 0.2) 0%, rgba(3, 7, 18, 1) 100%) !important;
    }
    
    [data-theme="dark"] .category-card {
        background: rgba(31, 41, 55, 0.5) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h1:not(.category-card h1):not(.car-card h1):not(.promotion-card h1):not(.hero-section h1),
    [data-theme="dark"] h2:not(.category-card h2):not(.car-card h2):not(.promotion-card h2),
    [data-theme="dark"] p:not(.category-card p):not(.car-card p):not(.promotion-card p):not(.hero-section p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Category cards use semi-transparent backgrounds in dark mode */
    [data-theme="dark"] .category-card * {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Car cards and promotion cards in sections should have white backgrounds with dark text */
    [data-theme="dark"] .car-card {
        background: white !important;
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .car-card * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .car-card .text-muted {
        color: #6b7280 !important;
    }
    
    /* Promotion cards use overlay - keep white text */
    [data-theme="dark"] .promotion-card,
    [data-theme="dark"] .promotion-card * {
        color: white !important;
    }
    
    /* Keep white text on colored backgrounds */
    [data-theme="dark"] .hero-section,
    [data-theme="dark"] .hero-section *,
    [data-theme="dark"] .promotion-banner,
    [data-theme="dark"] .promotion-banner *,
    [data-theme="dark"] .location-card-overlay,
    [data-theme="dark"] .location-card-overlay * {
        color: white !important;
    }

    .hero-section {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        background: linear-gradient(135deg, rgba(19, 91, 236, 0.1) 0%, rgba(3, 7, 18, 0.9) 100%);
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
        opacity: 0.5;
        z-index: -1;
    }

    #particle-canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -2;
    }

    .hero-title {
        font-family: 'Playfair Display', serif;
        font-size: clamp(3rem, 10vw, 6rem);
        font-weight: 700;
        line-height: 0.9;
        letter-spacing: -0.05em;
        color: white;
        text-shadow: 0 0 30px rgba(19, 91, 236, 0.5);
    }

    .search-interface {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 1.5rem;
    }

    .search-interface input,
    .search-interface select {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: white !important;
        height: 60px;
    }

    .search-interface input::placeholder,
    .search-interface select option {
        color: rgba(255, 255, 255, 0.5) !important;
    }

    .search-interface input:focus,
    .search-interface select:focus {
        background: rgba(255, 255, 255, 0.1) !important;
        border-color: var(--primary) !important;
        color: white !important;
        box-shadow: 0 0 0 3px rgba(19, 91, 236, 0.2) !important;
    }

    .btn-engage {
        background: var(--primary);
        color: white;
        border: none;
        height: 60px;
        font-weight: 700;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-engage:hover {
        background: #2563EB;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(59, 130, 246, 0.4);
        color: white;
    }

    .category-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
        padding: 2rem;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        position: relative;
        overflow: hidden;
        height: 100%;
    }

    .category-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 50% 50%, rgba(59, 130, 246, 0.25), transparent 70%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .category-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 0 40px rgba(19, 91, 236, 0.2);
        border-color: rgba(19, 91, 236, 0.5);
    }

    .category-card:hover::before {
        opacity: 1;
    }

    .category-card .material-symbols-outlined {
        font-size: 4rem;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .category-card:hover .material-symbols-outlined {
        color: var(--primary);
        transform: scale(1.1);
    }

    .location-card {
        position: relative;
        border-radius: 1rem;
        overflow: hidden;
        aspect-ratio: 1;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .location-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 0 50px rgba(59, 130, 246, 0.25);
    }

    .location-card img {
        transition: transform 0.5s ease;
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .location-card:hover img {
        transform: scale(1.1);
    }

    .location-card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(3, 7, 18, 0.9) 20%, rgba(3, 7, 18, 0) 70%);
        padding: 2rem;
        color: white;
    }

    .promotion-card {
        position: relative;
        border-radius: 1rem;
        overflow: hidden;
        min-height: 400px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .promotion-card img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.3;
        z-index: -1;
    }

    .promotion-card .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to top, rgba(3, 7, 18, 0.8) 0%, rgba(3, 7, 18, 0.4) 70%);
    }

    .promotion-card .content {
        position: relative;
        z-index: 1;
        padding: 2rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        color: white;
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 700;
        color: white;
    }
</style>
}

