@{
    ViewData["Title"] = "Manager Dashboard - DriveLuxe";
    var stats = ViewBag.Stats as dynamic;
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
        --primary-dark: #0d4ab8;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #06b6d4;
        --purple: #8b5cf6;
        --dark: #1f2937;
        --light: #f9fafb;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--light);
    }

    .stat-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        background: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
    }

    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .stat-card.primary::before { background: linear-gradient(90deg, var(--primary), #2563eb); }
    .stat-card.success::before { background: linear-gradient(90deg, var(--success), #059669); }
    .stat-card.warning::before { background: linear-gradient(90deg, var(--warning), #d97706); }
    .stat-card.info::before { background: linear-gradient(90deg, var(--info), #0891b2); }

    .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-icon.primary { background: rgba(59, 130, 246, 0.1); color: var(--primary); }
    .stat-icon.success { background: rgba(16, 185, 129, 0.1); color: var(--success); }
    .stat-icon.warning { background: rgba(245, 158, 11, 0.1); color: var(--warning); }
    .stat-icon.info { background: rgba(6, 182, 212, 0.1); color: var(--info); }

    .counter {
        font-size: 2rem;
        font-weight: 800;
        color: var(--dark);
        line-height: 1.2;
    }

    .stat-label {
        color: #6b7280;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .chart-container {
        position: relative;
        height: 300px;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White stat cards in dark mode need dark text */
    [data-theme="dark"] .stat-card {
        background: white !important;
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .stat-card * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .counter {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .stat-label {
        color: #6b7280 !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h1:not(.stat-card h1):not(.card h1),
    [data-theme="dark"] h2:not(.stat-card h2):not(.card h2),
    [data-theme="dark"] h3:not(.stat-card h3):not(.card h3),
    [data-theme="dark"] p:not(.stat-card p):not(.card p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: Material symbols in stat cards must be visible */
    [data-theme="dark"] .stat-icon {
        background-color: inherit !important;
    }
    
    [data-theme="dark"] .stat-icon.primary {
        background: rgba(59, 130, 246, 0.1) !important;
    }
    
    [data-theme="dark"] .stat-icon.primary .material-symbols-outlined {
        color: var(--primary, #135bec) !important;
    }
    
    [data-theme="dark"] .stat-icon.success {
        background: rgba(16, 185, 129, 0.1) !important;
    }
    
    [data-theme="dark"] .stat-icon.success .material-symbols-outlined {
        color: var(--success, #10b981) !important;
    }
    
    [data-theme="dark"] .stat-icon.warning {
        background: rgba(245, 158, 11, 0.1) !important;
    }
    
    [data-theme="dark"] .stat-icon.warning .material-symbols-outlined {
        color: var(--warning, #f59e0b) !important;
    }
    
    [data-theme="dark"] .stat-icon.info {
        background: rgba(6, 182, 212, 0.1) !important;
    }
    
    [data-theme="dark"] .stat-icon.info .material-symbols-outlined {
        color: var(--info, #06b6d4) !important;
    }
    
    /* Material symbols outside cards */
    [data-theme="dark"] .material-symbols-outlined:not(.stat-icon .material-symbols-outlined):not(.badge .material-symbols-outlined) {
        color: inherit !important;
    }
</style>
}

<div class="container py-5 page-transition">
    <div class="d-flex justify-content-between align-items-center mb-5 fade-in">
        <div>
            <h1 class="mb-1 fw-bold" style="font-size: 2.5rem;">
                <span class="material-symbols-outlined text-primary me-2" style="font-size: 2rem; vertical-align: middle;">dashboard</span>
                Manager Dashboard
            </h1>
            <p class="text-muted mb-0">Complete system overview and management</p>
        </div>
        <div class="d-flex gap-2">
            <span class="badge bg-success px-3 py-2">
                <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">circle</span>
                All Systems Operational
            </span>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3 stagger-item">
            <div class="stat-card primary h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="stat-icon primary">
                            <span class="material-symbols-outlined">people</span>
                        </div>
                    </div>
                    <p class="stat-label mb-2">Total Users</p>
                    <h2 class="counter mb-0" data-target="@(stats?.TotalUsers ?? 0)">0</h2>
                    <small class="text-primary d-block mt-2">
                        <span class="material-symbols-outlined" style="font-size: 1rem; vertical-align: middle;">trending_up</span>
                        Registered users
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 stagger-item">
            <div class="stat-card info h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="stat-icon info">
                            <span class="material-symbols-outlined">badge</span>
                        </div>
                    </div>
                    <p class="stat-label mb-2">Total Staff</p>
                    <h2 class="counter mb-0" data-target="@(stats?.TotalStaff ?? 0)">0</h2>
                    <small class="text-info d-block mt-2">
                        <span class="material-symbols-outlined" style="font-size: 1rem; vertical-align: middle;">groups</span>
                        Active staff members
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 stagger-item">
            <div class="stat-card success h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="stat-icon success">
                            <span class="material-symbols-outlined">person</span>
                        </div>
                    </div>
                    <p class="stat-label mb-2">Total Customers</p>
                    <h2 class="counter mb-0" data-target="@(stats?.TotalCustomers ?? 0)">0</h2>
                    <small class="text-success d-block mt-2">
                        <span class="material-symbols-outlined" style="font-size: 1rem; vertical-align: middle;">account_circle</span>
                        Active customers
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-3 stagger-item">
            <div class="stat-card warning h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="stat-icon warning">
                            <span class="material-symbols-outlined">payments</span>
                        </div>
                    </div>
                    <p class="stat-label mb-2">Total Revenue</p>
                    <h2 class="counter mb-0" data-target="@(Math.Round((double)(stats?.TotalRevenue ?? 0), 0))">0</h2>
                    <small class="text-warning d-block mt-2">
                        <span class="material-symbols-outlined" style="font-size: 1rem; vertical-align: middle;">attach_money</span>
                        RM @(stats?.TotalRevenue?.ToString("N2") ?? "0.00")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 stagger-item">
            <div class="stat-card primary h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                            <span class="material-symbols-outlined text-primary">calendar_month</span>
                            Total Appointments
                        </h5>
                        <h2 class="counter mb-0" data-target="@(stats?.TotalAppointments ?? 0)">0</h2>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-primary" style="width: 75%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block">Monthly progress</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 stagger-item">
            <div class="stat-card success h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                            <span class="material-symbols-outlined text-success">directions_car</span>
                            Total Vehicles
                        </h5>
                        <h2 class="counter mb-0" data-target="@(stats?.TotalCars ?? 0)">0</h2>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar bg-success" style="width: 60%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block">Fleet utilization</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-12 fade-in">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-bold d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined text-primary">settings</span>
                        Management Functions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="StaffManagement" class="btn btn-primary w-100 action-btn">
                                <span class="material-symbols-outlined me-2" style="font-size: 1.25rem; vertical-align: middle;">groups</span>
                                Staff Management
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="AllUsers" class="btn btn-info w-100 action-btn text-white">
                                <span class="material-symbols-outlined me-2" style="font-size: 1.25rem; vertical-align: middle;">people</span>
                                User Management
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Analytics" asp-action="Dashboard" class="btn btn-success w-100 action-btn text-white">
                                <span class="material-symbols-outlined me-2" style="font-size: 1.25rem; vertical-align: middle;">analytics</span>
                                Analytics
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Settings" asp-action="Index" class="btn btn-secondary w-100 action-btn">
                                <span class="material-symbols-outlined me-2" style="font-size: 1.25rem; vertical-align: middle;">settings</span>
                                System Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
}
