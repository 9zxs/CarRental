@using CarRentalSystem.Models
@model ApplicationUser
@{
    ViewData["Title"] = "Customer Details - DriveLuxe";
    var roles = ViewBag.Roles as IList<string> ?? new List<string>();
    var appointments = ViewBag.Appointments as List<Appointment> ?? new List<Appointment>();
    var payments = ViewBag.Payments as List<Payment> ?? new List<Payment>();
    var reviews = ViewBag.Reviews as List<Review> ?? new List<Review>();
    var totalSpent = ViewBag.TotalSpent as decimal? ?? 0;
    var totalBookings = ViewBag.TotalBookings as int? ?? 0;
    var completedBookings = ViewBag.CompletedBookings as int? ?? 0;
    var pendingBookings = ViewBag.PendingBookings as int? ?? 0;
    var cancelledBookings = ViewBag.CancelledBookings as int? ?? 0;
    var averageRating = ViewBag.AverageRating as double? ?? 0;
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: #f9fafb;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h2:not(.card h2),
    [data-theme="dark"] h3:not(.card h3),
    [data-theme="dark"] h4:not(.card h4),
    [data-theme="dark"] h5:not(.card h5),
    [data-theme="dark"] p:not(.card p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White cards in dark mode need dark text */
    [data-theme="dark"] .card,
    [data-theme="dark"] .card-body,
    [data-theme="dark"] .card-header,
    [data-theme="dark"] .table-responsive,
    [data-theme="dark"] .table {
        background-color: white !important;
        color: #1f2937 !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .card-header.bg-white {
        background-color: white !important;
    }
    
    [data-theme="dark"] .table th,
    [data-theme="dark"] .table td {
        background-color: white !important;
        color: #1f2937 !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .card *,
    [data-theme="dark"] .table * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .card .text-muted,
    [data-theme="dark"] .table .text-muted,
    [data-theme="dark"] .card label.text-muted {
        color: #6b7280 !important;
    }
    
    /* Form elements in white cards */
    [data-theme="dark"] .card .form-control,
    [data-theme="dark"] .card .form-select,
    [data-theme="dark"] .card button {
        background-color: white !important;
        border-color: #d1d5db !important;
        color: #1f2937 !important;
    }
</style>
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <span class="material-symbols-outlined me-2" style="vertical-align: middle;">person</span>
            Customer Details
        </h2>
        <a asp-action="UserManagement" class="btn btn-outline-secondary">
            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">arrow_back</span>
            Back to Customers
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span class="material-symbols-outlined me-2" style="font-size: 1rem; vertical-align: middle;">check_circle</span>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span class="material-symbols-outlined me-2" style="font-size: 1rem; vertical-align: middle;">error</span>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" alt="Profile" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="material-symbols-outlined mb-3" style="font-size: 6rem; opacity: 0.5;">account_circle</span>
                    }
                    <h4 class="fw-bold mb-1">@(Model.FirstName ?? "") @(Model.LastName ?? "")</h4>
                    <p class="text-muted mb-3">@Model.Email</p>
                    <div class="mb-3">
                        @foreach (var role in roles)
                        {
                            @if (role == "Manager")
                            {
                                <span class="badge bg-danger">@role</span>
                            }
                            else if (role == "Staff")
                            {
                                <span class="badge bg-warning text-dark">@role</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">@role</span>
                            }
                        }
                    </div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                    <div class="mt-3">
                        @if (roles.Contains("Customer"))
                        {
                            <form asp-action="ToggleCustomerStatus" method="post">
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <button type="submit" class="btn btn-sm @(Model.IsActive ? "btn-warning" : "btn-success") w-100">
                                    <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">@(Model.IsActive ? "block" : "check_circle")</span>
                                    @(Model.IsActive ? "Deactivate" : "Activate") Account
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-bold">Customer Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3 text-center">
                        <div class="col-6">
                            <div class="fw-bold text-primary fs-4">@totalBookings</div>
                            <div class="text-muted small">Total Bookings</div>
                        </div>
                        <div class="col-6">
                            <div class="fw-bold text-success fs-4">RM @totalSpent.ToString("N2")</div>
                            <div class="text-muted small">Total Spent</div>
                        </div>
                        <div class="col-6">
                            <div class="fw-bold text-info fs-4">@completedBookings</div>
                            <div class="text-muted small">Completed</div>
                        </div>
                        <div class="col-6">
                            <div class="fw-bold text-warning fs-4">@pendingBookings</div>
                            <div class="text-muted small">Pending</div>
                        </div>
                        @if (averageRating > 0)
                        {
                            <div class="col-12">
                                <div class="fw-bold text-warning fs-4">@averageRating.ToString("F1")</div>
                                <div class="text-muted small">Average Rating (@reviews.Count reviews)</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-bold">Profile Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">First Name</label>
                            <div class="fw-medium">@(Model.FirstName ?? "-")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Last Name</label>
                            <div class="fw-medium">@(Model.LastName ?? "-")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Email</label>
                            <div class="fw-medium">@Model.Email</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Phone Number</label>
                            <div class="fw-medium">@(Model.PhoneNumber ?? "-")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Date of Birth</label>
                            <div class="fw-medium">@(Model.DateOfBirth?.ToString("MMM dd, yyyy") ?? "-")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Account Created</label>
                            <div class="fw-medium">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <div class="col-12">
                                <label class="text-muted small">Address</label>
                                <div class="fw-medium">@Model.Address</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.State))
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">City</label>
                                <div class="fw-medium">@(Model.City ?? "-")</div>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">State</label>
                                <div class="fw-medium">@(Model.State ?? "-")</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.ZipCode))
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">Zip Code</label>
                                <div class="fw-medium">@Model.ZipCode</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.LicenseNumber))
                        {
                            <div class="col-md-6">
                                <label class="text-muted small">License Number</label>
                                <div class="fw-medium">@Model.LicenseNumber</div>
                            </div>
                        }
                        <div class="col-md-6">
                            <label class="text-muted small">Email Confirmed</label>
                            <div>
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">No</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Account Status</label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Booking History</h5>
                    <span class="badge bg-primary">@appointments.Count</span>
                </div>
                <div class="card-body">
                    @if (appointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Car</th>
                                        <th>Pickup Date</th>
                                        <th>Return Date</th>
                                        <th>Total Price</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in appointments.Take(10))
                                    {
                                        <tr>
                                            <td>#@appointment.Id</td>
                                            <td>@appointment.Car?.DisplayName</td>
                                            <td>@appointment.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@appointment.EndDate.ToString("MMM dd, yyyy")</td>
                                            <td class="fw-bold">RM @appointment.TotalPrice.ToString("N2")</td>
                                            <td>
                                                @if (appointment.Status == "Confirmed")
                                                {
                                                    <span class="badge bg-success">@appointment.Status</span>
                                                }
                                                else if (appointment.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning text-dark">@appointment.Status</span>
                                                }
                                                else if (appointment.Status == "Completed")
                                                {
                                                    <span class="badge bg-info">@appointment.Status</span>
                                                }
                                                else if (appointment.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@appointment.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@appointment.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="OrderDetails" asp-route-id="@appointment.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <span class="material-symbols-outlined" style="font-size: 1rem;">visibility</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <span class="material-symbols-outlined mb-2" style="font-size: 3rem; opacity: 0.5;">event_busy</span>
                            <div>No bookings found</div>
                        </div>
                    }
                </div>
            </div>

            @if (payments.Any())
            {
                <div class="card border-0 shadow-sm rounded-3 mb-4">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">Payment History</h5>
                        <span class="badge bg-success">@payments.Count</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Payment ID</th>
                                        <th>Car</th>
                                        <th>Amount</th>
                                        <th>Payment Date</th>
                                        <th>Status</th>
                                        <th>Method</th>
                                        <th>Transaction ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in payments.Take(10))
                                    {
                                        <tr>
                                            <td>#@payment.Id</td>
                                            <td>@payment.Appointment?.Car?.DisplayName</td>
                                            <td class="fw-bold">RM @payment.Amount.ToString("N2")</td>
                                            <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (payment.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">@payment.Status</span>
                                                }
                                                else if (payment.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning text-dark">@payment.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@payment.Status</span>
                                                }
                                            </td>
                                            <td>@payment.PaymentMethod</td>
                                            <td><small class="text-muted">@(payment.TransactionId ?? "-")</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (reviews.Any())
            {
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-bold">Customer Reviews</h5>
                        <span class="badge bg-warning text-dark">@reviews.Count</span>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var review in reviews.Take(6))
                            {
                                <div class="col-md-6">
                                    <div class="card border">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between mb-2">
                                                <div class="fw-bold">@review.Car?.DisplayName</div>
                                                <div class="text-warning">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <span class="material-symbols-outlined" style="font-size: 1rem; @(i <= review.Rating ? "font-variation-settings: 'FILL' 1;" : "")">star</span>
                                                    }
                                                </div>
                                            </div>
                                            <p class="text-muted small mb-2">"@review.Comment"</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                @if (review.IsApproved)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

