@model Car
@{
    ViewData["Title"] = "Add Vehicle - DriveLuxe";
    var categories = ViewBag.Categories as SelectList ?? new SelectList(new List<Category>(), "Id", "Name");
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: #f9fafb;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h2:not(.card h2),
    [data-theme="dark"] h3:not(.card h3),
    [data-theme="dark"] h4:not(.card h4),
    [data-theme="dark"] h5:not(.card h5),
    [data-theme="dark"] p:not(.card p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White cards in dark mode need dark text */
    [data-theme="dark"] .card,
    [data-theme="dark"] .card-body {
        background-color: white !important;
        color: #1f2937 !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .card * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .card .text-muted,
    [data-theme="dark"] .card label.text-muted,
    [data-theme="dark"] .card small.text-muted {
        color: #6b7280 !important;
    }
    
    /* Form elements in white cards */
    [data-theme="dark"] .card .form-control,
    [data-theme="dark"] .card .form-select,
    [data-theme="dark"] .card .form-check-input,
    [data-theme="dark"] .card label {
        background-color: white !important;
        border-color: #d1d5db !important;
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .card .form-check-label {
        color: #1f2937 !important;
    }
    
    /* Validation text */
    [data-theme="dark"] .text-danger {
        color: #dc2626 !important;
    }
</style>
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">
                <span class="material-symbols-outlined me-2" style="vertical-align: middle;">add_circle</span>
                Add New Vehicle
            </h2>
            <p class="text-muted mb-0">Add a new vehicle to your fleet</p>
        </div>
        <a asp-action="VehicleManagement" class="btn btn-outline-secondary">
            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">arrow_back</span>
            Back to Vehicle Management
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <span class="material-symbols-outlined me-2" style="font-size: 1.25rem; vertical-align: middle;">check_circle</span>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5 class="fw-bold mb-3">Basic Information</h5>
                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="Make" class="form-label fw-medium">Make *</label>
                                <input asp-for="Make" class="form-control" placeholder="e.g., Toyota" required />
                                <span asp-validation-for="Make" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Model" class="form-label fw-medium">Model *</label>
                                <input asp-for="Model" class="form-control" placeholder="e.g., Camry" required />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Year" class="form-label fw-medium">Year *</label>
                                <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" placeholder="e.g., 2024" required />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="LicensePlate" class="form-label fw-medium">License Plate *</label>
                                <input asp-for="LicensePlate" class="form-control" placeholder="e.g., ABC1234" required />
                                <span asp-validation-for="LicensePlate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Color" class="form-label fw-medium">Color *</label>
                                <input asp-for="Color" class="form-control" placeholder="e.g., Black" required />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="DailyRate" class="form-label fw-medium">Daily Rate (RM) *</label>
                                <input asp-for="DailyRate" class="form-control" type="number" step="0.01" min="0" placeholder="e.g., 99.99" required />
                                <span asp-validation-for="DailyRate" class="text-danger"></span>
                            </div>
                        </div>

                        <h5 class="fw-bold mb-3 mt-4">Location & Category</h5>
                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label asp-for="State" class="form-label fw-medium">State *</label>
                                <select asp-for="State" class="form-select" required>
                                    <option value="">Select State</option>
                                    <option value="Johor">Johor</option>
                                    <option value="Kedah">Kedah</option>
                                    <option value="Kelantan">Kelantan</option>
                                    <option value="Kuala Lumpur">Kuala Lumpur</option>
                                    <option value="Labuan">Labuan</option>
                                    <option value="Melaka">Melaka</option>
                                    <option value="Negeri Sembilan">Negeri Sembilan</option>
                                    <option value="Pahang">Pahang</option>
                                    <option value="Penang">Penang</option>
                                    <option value="Perak">Perak</option>
                                    <option value="Perlis">Perlis</option>
                                    <option value="Putrajaya">Putrajaya</option>
                                    <option value="Sabah">Sabah</option>
                                    <option value="Sarawak">Sarawak</option>
                                    <option value="Selangor">Selangor</option>
                                    <option value="Terengganu">Terengganu</option>
                                </select>
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="City" class="form-label fw-medium">City</label>
                                <input asp-for="City" class="form-control" placeholder="e.g., Kuala Lumpur" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CategoryId" class="form-label fw-medium">Category</label>
                                <select asp-for="CategoryId" asp-items="categories" class="form-select">
                                    <option value="">Select Category (Optional)</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <h5 class="fw-bold mb-3 mt-4">Fuel Type & Specifications</h5>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FuelType" class="form-label fw-medium">Fuel Type *</label>
                                <select asp-for="FuelType" class="form-select" id="fuelTypeSelect" required>
                                    <option value="">Select Fuel Type</option>
                                    <option value="Gas">Gas</option>
                                    <option value="Electric">Electric</option>
                                    <option value="Hybrid">Hybrid</option>
                                </select>
                                <span asp-validation-for="FuelType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Vehicle Type</label>
                                <div class="mt-2">
                                    <div class="form-check">
                                        <input asp-for="IsElectric" class="form-check-input" type="checkbox" id="isElectricCheck" />
                                        <label asp-for="IsElectric" class="form-check-label">Electric Vehicle</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="evSpecs" style="display: none;">
                            <div class="row g-3 mb-3">
                                <div class="col-md-4">
                                    <label asp-for="BatteryCapacity" class="form-label fw-medium">Battery Capacity (kWh)</label>
                                    <input asp-for="BatteryCapacity" class="form-control" type="number" min="0" placeholder="e.g., 75" />
                                    <span asp-validation-for="BatteryCapacity" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Range" class="form-label fw-medium">Range (km)</label>
                                    <input asp-for="Range" class="form-control" type="number" min="0" placeholder="e.g., 400" />
                                    <span asp-validation-for="Range" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="ChargingTime" class="form-label fw-medium">Charging Time (minutes for 80%)</label>
                                    <input asp-for="ChargingTime" class="form-control" type="number" min="0" placeholder="e.g., 30" />
                                    <span asp-validation-for="ChargingTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="fw-bold mb-3 mt-4">Additional Information</h5>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-medium">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Vehicle description, features, etc."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-medium">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://example.com/image.jpg" />
                            <small class="text-muted">Enter a URL to an image of the vehicle</small>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LocationAddress" class="form-label fw-medium">Location Address</label>
                            <input asp-for="LocationAddress" class="form-control" placeholder="Full address where vehicle is located" />
                            <span asp-validation-for="LocationAddress" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="VehicleManagement" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">save</span>
                                Add Vehicle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Auto-check IsElectric when Electric is selected
        document.getElementById('fuelTypeSelect')?.addEventListener('change', function() {
            const isElectric = this.value === 'Electric';
            document.getElementById('isElectricCheck').checked = isElectric;
            document.getElementById('evSpecs').style.display = isElectric ? 'block' : 'none';
        });

        // Show/hide EV specs when checkbox is toggled
        document.getElementById('isElectricCheck')?.addEventListener('change', function() {
            document.getElementById('evSpecs').style.display = this.checked ? 'block' : 'none';
            if (!this.checked) {
                document.getElementById('fuelTypeSelect').value = 'Gas';
            }
        });

        // Image preview functionality
        document.getElementById('imageFile')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const preview = document.getElementById('previewImg');
                    const previewContainer = document.getElementById('imagePreview');
                    if (preview && previewContainer) {
                        preview.src = event.target.result;
                        previewContainer.style.display = 'block';
                    }
                };
                reader.readAsDataURL(file);
            } else {
                const previewContainer = document.getElementById('imagePreview');
                if (previewContainer) {
                    previewContainer.style.display = 'none';
                }
            }
        });
    </script>
}

