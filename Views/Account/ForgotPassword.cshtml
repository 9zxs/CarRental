@model ForgotPasswordViewModel
@{
    Layout = null; // Remove header and footer completely
    ViewData["Title"] = "Forgot Password - CARental";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
    :root {
        --primary: #135bec;
        --primary-dark: #0d4ab8;
        --primary-light: #4d7df0;
        --background-light: #f6f6f8;
        --background-dark: #101622;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--background-light);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        z-index: 0;
    }

    .login-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 450px;
        padding: 1rem;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.5);
        overflow: hidden;
        position: relative;
    }

    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient);
    }

    .brand-section {
        text-align: center;
        padding: 2.5rem 2rem 2rem;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
    }

    .brand-logo {
        width: 64px;
        height: 64px;
        background: var(--gradient);
        border-radius: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        transition: transform 0.3s ease;
    }

    .brand-logo:hover {
        transform: scale(1.05) rotate(5deg);
    }

    .brand-logo .material-symbols-outlined {
        font-size: 2.5rem;
        color: white;
    }

    .form-section {
        padding: 2rem;
    }

    .form-input-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-input-group label {
        display: block;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input-group label,
    [data-theme="dark"] h1[style*="color"],
    [data-theme="dark"] h2[style*="color"] {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .login-card {
        background: var(--bg-secondary, #1f2937) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input {
        background: var(--bg-tertiary, #374151) !important;
        border-color: var(--border-color, #374151) !important;
        color: var(--text-primary, #f9fafb) !important;
    }

    .form-input-wrapper {
        position: relative;
    }

    .form-input-wrapper .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
        z-index: 2;
        pointer-events: none;
    }

    .form-input {
        width: 100%;
        height: 52px;
        padding: 0.75rem 1rem 0.75rem 3rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(19, 91, 236, 0.1);
        transform: translateY(-1px);
    }

    .form-input:focus + .input-icon,
    .form-input:not(:placeholder-shown) + .input-icon {
        color: var(--primary);
    }

    .btn-login {
        width: 100%;
        height: 52px;
        background: var(--gradient);
        border: none;
        border-radius: 0.75rem;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-login::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .btn-login:hover::before {
        left: 100%;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-login:active {
        transform: translateY(0);
    }

    .back-link {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .back-link a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        margin-left: 0.25rem;
    }

    .back-link a:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 0.75rem;
        border: none;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
    }
    </style>
</head>
<body>
<!-- No header or footer - standalone page -->
<div class="login-container">
    <div class="login-card">
        <div class="brand-section">
            <div class="brand-logo">
                <span class="material-symbols-outlined">directions_car</span>
            </div>
            <h2 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">CARental</h2>
            <p class="text-muted mb-0 small">Premium Car Rental Experience</p>
        </div>

        <div class="form-section">
            <div class="text-center mb-4">
                <h1 class="fw-bold mb-2" style="font-size: 1.5rem; color: #1f2937;">Forgot Password</h1>
                <p class="text-muted mb-0" style="font-size: 0.875rem;">Enter your email to reset your password</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-start">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">check_circle</span>
                    <div>
                        <strong>Success!</strong>
                        <p class="mb-0 small">@TempData["SuccessMessage"]</p>
                    </div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger d-flex align-items-start alert-dismissible fade show">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">error</span>
                    <div class="flex-grow-1">
                        <strong>Error!</strong>
                        <p class="mb-0 small">@TempData["ErrorMessage"]</p>
                    </div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: @(ViewData.ModelState.ErrorCount > 0 ? "block" : "none");"></div>

                <div class="form-input-group">
                    <label asp-for="Email">Email Address</label>
                    <div class="form-input-wrapper">
                        <input asp-for="Email" 
                               class="form-input" 
                               placeholder="you@example.com" 
                               type="email" 
                               required 
                               autocomplete="email" />
                        <span class="material-symbols-outlined input-icon">mail</span>
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn-login">
                    <span class="d-flex align-items-center justify-content-center">
                        <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">lock_reset</span>
                        Send Reset Link
                    </span>
                </button>
            </form>

            <div class="back-link">
                Remember your password? <a asp-action="Login">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
