@model ResetPasswordViewModel
@{
    Layout = null; // Remove header and footer completely
    ViewData["Title"] = "Reset Password - CARental";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
    :root {
        --primary: #135bec;
        --primary-dark: #0d4ab8;
        --primary-light: #4d7df0;
        --background-light: #f6f6f8;
        --background-dark: #101622;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--background-light);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        z-index: 0;
    }

    .login-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 450px;
        padding: 1rem;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.5);
        overflow: hidden;
        position: relative;
    }

    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient);
    }

    .brand-section {
        text-align: center;
        padding: 2.5rem 2rem 2rem;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
    }

    .brand-logo {
        width: 64px;
        height: 64px;
        background: var(--gradient);
        border-radius: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        transition: transform 0.3s ease;
    }

    .brand-logo:hover {
        transform: scale(1.05) rotate(5deg);
    }

    .brand-logo .material-symbols-outlined {
        font-size: 2.5rem;
        color: white;
    }

    .form-section {
        padding: 2rem;
    }

    .form-input-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-input-group label {
        display: block;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input-group label,
    [data-theme="dark"] h1[style*="color"],
    [data-theme="dark"] h2[style*="color"] {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .login-card {
        background: var(--bg-secondary, #1f2937) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input {
        background: var(--bg-tertiary, #374151) !important;
        border-color: var(--border-color, #374151) !important;
        color: var(--text-primary, #f9fafb) !important;
    }

    .form-input-wrapper {
        position: relative;
    }

    .form-input-wrapper .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
        z-index: 2;
        pointer-events: none;
    }

    .form-input {
        width: 100%;
        height: 52px;
        padding: 0.75rem 1rem 0.75rem 3rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(19, 91, 236, 0.1);
        transform: translateY(-1px);
    }

    .form-input:focus + .input-icon,
    .form-input:not(:placeholder-shown) + .input-icon {
        color: var(--primary);
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #9ca3af;
        cursor: pointer;
        z-index: 10;
        padding: 0.25rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .password-toggle:hover {
        color: var(--primary);
    }

    .password-strength {
        height: 4px;
        border-radius: 2px;
        background: #e5e7eb;
        margin-top: 0.5rem;
        overflow: hidden;
    }

    .password-strength-bar {
        height: 100%;
        transition: width 0.3s ease, background-color 0.3s ease;
    }

    .strength-weak { background-color: #ef4444; }
    .strength-fair { background-color: #f59e0b; }
    .strength-good { background-color: #22c55e; }
    .strength-strong { background-color: #10b981; }

    .btn-login {
        width: 100%;
        height: 52px;
        background: var(--gradient);
        border: none;
        border-radius: 0.75rem;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-login::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .btn-login:hover::before {
        left: 100%;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-login:active {
        transform: translateY(0);
    }

    .back-link {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .back-link a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        margin-left: 0.25rem;
    }

    .back-link a:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 0.75rem;
        border: none;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
    }

    .text-muted small {
        font-size: 0.75rem;
    }
    </style>
</head>
<body>
<!-- No header or footer - standalone page -->
<div class="login-container">
    <div class="login-card">
        <div class="brand-section">
            <div class="brand-logo">
                <span class="material-symbols-outlined">directions_car</span>
            </div>
            <h2 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">CARental</h2>
            <p class="text-muted mb-0 small">Premium Car Rental Experience</p>
        </div>

        <div class="form-section">
            <div class="text-center mb-4">
                <h1 class="fw-bold mb-2" style="font-size: 1.5rem; color: #1f2937;">Set New Password</h1>
                <p class="text-muted mb-0" style="font-size: 0.875rem;">Create a new, secure password for your account</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-start">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">check_circle</span>
                    <div>
                        <strong>Success!</strong>
                        <p class="mb-0 small">@TempData["SuccessMessage"]</p>
                    </div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger d-flex align-items-start alert-dismissible fade show">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">error</span>
                    <div class="flex-grow-1">
                        <strong>Error!</strong>
                        <p class="mb-0 small">@TempData["ErrorMessage"]</p>
                    </div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ResetPassword" method="post" id="resetForm">
                @Html.AntiForgeryToken()
                <input asp-for="Token" type="hidden" />
                <input asp-for="Email" type="hidden" />
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: @(ViewData.ModelState.ErrorCount > 0 ? "block" : "none");"></div>

                <div class="form-input-group">
                    <label asp-for="Password">New Password *</label>
                    <div class="form-input-wrapper">
                        <input asp-for="Password" 
                               class="form-input" 
                               placeholder="Enter your new password" 
                               type="password" 
                               id="passwordInput"
                               required 
                               autocomplete="new-password"
                               minlength="6" />
                        <span class="material-symbols-outlined input-icon">lock</span>
                        <button type="button" class="password-toggle" onclick="togglePassword('passwordInput')">
                            <span class="material-symbols-outlined" style="font-size: 1.25rem;">visibility</span>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="strengthBar" style="width: 0%;"></div>
                    </div>
                    <small class="text-muted d-block mt-1">
                        Password strength: <span class="fw-semibold" id="strengthText">-</span>
                    </small>
                </div>

                <div class="form-input-group">
                    <label asp-for="ConfirmPassword">Confirm New Password *</label>
                    <div class="form-input-wrapper">
                        <input asp-for="ConfirmPassword" 
                               class="form-input" 
                               placeholder="Confirm your new password" 
                               type="password" 
                               id="confirmPasswordInput"
                               required 
                               autocomplete="new-password"
                               minlength="6" />
                        <span class="material-symbols-outlined input-icon">lock</span>
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPasswordInput')">
                            <span class="material-symbols-outlined" style="font-size: 1.25rem;">visibility</span>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    <small class="text-muted d-block mt-1" id="passwordMatch"></small>
                </div>

                <button type="submit" class="btn-login">
                    <span class="d-flex align-items-center justify-content-center">
                        <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">lock_reset</span>
                        Reset Password
                    </span>
                </button>
            </form>

            <div class="back-link">
                Remember your password? <a asp-action="Login">Back to Login</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script>
    function togglePassword(inputId) {
        const input = document.getElementById(inputId);
        const button = event.currentTarget;
        const icon = button.querySelector('.material-symbols-outlined');
        
        if (input.type === 'password') {
            input.type = 'text';
            icon.textContent = 'visibility_off';
        } else {
            input.type = 'password';
            icon.textContent = 'visibility';
        }
    }

    function checkPasswordStrength(password) {
        let strength = 0;
        
        if (password.length >= 6) strength++;
        if (password.length >= 8) strength++;
        if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
        if (/\d/.test(password)) strength++;
        if (/[^a-zA-Z\d]/.test(password)) strength++;
        
        return strength;
    }

    document.addEventListener('DOMContentLoaded', function() {
        const card = document.querySelector('.login-card');
        if (card) {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        }

        const passwordInput = document.getElementById('passwordInput');
        const confirmPasswordInput = document.getElementById('confirmPasswordInput');
        const strengthBar = document.getElementById('strengthBar');
        const strengthText = document.getElementById('strengthText');
        const passwordMatch = document.getElementById('passwordMatch');

        // Adjust padding for password inputs
        if (passwordInput) {
            passwordInput.style.paddingRight = '3rem';
        }
        if (confirmPasswordInput) {
            confirmPasswordInput.style.paddingRight = '3rem';
        }

        // Password strength checker
        if (passwordInput && strengthBar && strengthText) {
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                const strength = checkPasswordStrength(password);
                
                let strengthLabel = '-';
                let strengthClass = '';
                let percentage = 0;
                
                if (password.length === 0) {
                    strengthLabel = '-';
                    percentage = 0;
                } else if (strength <= 1) {
                    strengthLabel = 'Weak';
                    strengthClass = 'strength-weak';
                    percentage = 25;
                } else if (strength === 2) {
                    strengthLabel = 'Fair';
                    strengthClass = 'strength-fair';
                    percentage = 50;
                } else if (strength === 3) {
                    strengthLabel = 'Good';
                    strengthClass = 'strength-good';
                    percentage = 75;
                } else {
                    strengthLabel = 'Strong';
                    strengthClass = 'strength-strong';
                    percentage = 100;
                }
                
                strengthBar.style.width = percentage + '%';
                strengthBar.className = 'password-strength-bar ' + strengthClass;
                strengthText.textContent = strengthLabel;
                
                // Color the text
                if (strength <= 1) {
                    strengthText.className = 'fw-semibold text-danger';
                } else if (strength === 2) {
                    strengthText.className = 'fw-semibold text-warning';
                } else {
                    strengthText.className = 'fw-semibold text-success';
                }
            });
        }

        // Password match checker
        if (passwordInput && confirmPasswordInput && passwordMatch) {
            confirmPasswordInput.addEventListener('input', function() {
                const password = passwordInput.value;
                const confirm = this.value;
                
                if (confirm.length === 0) {
                    passwordMatch.textContent = '';
                    passwordMatch.className = 'text-muted d-block mt-1';
                } else if (password === confirm) {
                    passwordMatch.innerHTML = '<span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">check_circle</span> Passwords match';
                    passwordMatch.className = 'text-success d-block mt-1';
                } else {
                    passwordMatch.innerHTML = '<span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">error</span> Passwords do not match';
                    passwordMatch.className = 'text-danger d-block mt-1';
                }
            });

            passwordInput.addEventListener('input', function() {
                if (confirmPasswordInput.value) {
                    confirmPasswordInput.dispatchEvent(new Event('input'));
                }
            });
        }

        // Form validation
        const resetForm = document.getElementById('resetForm');
        if (resetForm) {
            resetForm.addEventListener('submit', function(e) {
                const password = passwordInput.value;
                const confirm = confirmPasswordInput.value;
                
                if (password !== confirm) {
                    e.preventDefault();
                    alert('Passwords do not match. Please check and try again.');
                    return false;
                }
                
                if (password.length < 6) {
                    e.preventDefault();
                    alert('Password must be at least 6 characters long.');
                    return false;
                }
            });
        }
    });
</script>
</body>
</html>
