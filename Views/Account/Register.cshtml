@model RegisterViewModel
@{
    Layout = null; // Remove header and footer completely
    ViewData["Title"] = "Create Account - CARental";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
    :root {
        --primary: #135bec;
        --primary-dark: #0d4ab8;
        --primary-light: #4d7df0;
        --background-light: #f6f6f8;
        --background-dark: #101622;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--background-light);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow-x: hidden;
        padding: 2rem 0;
        margin: 0;
    }

    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        z-index: 0;
    }

    .register-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 900px;
        padding: 1rem;
    }

    .register-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.5);
        overflow: hidden;
        position: relative;
    }

    .register-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient);
    }

    .brand-section {
        text-align: center;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
        border-bottom: 1px solid #e5e7eb;
    }

    .brand-logo {
        width: 56px;
        height: 56px;
        background: var(--gradient);
        border-radius: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.75rem;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .brand-logo .material-symbols-outlined {
        font-size: 2rem;
        color: white;
    }

    .form-section {
        padding: 2rem;
    }

    .form-input-group {
        position: relative;
        margin-bottom: 1.25rem;
    }

    .form-input-group label {
        display: block;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input-group label,
    [data-theme="dark"] h1[style*="color"] {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .register-card {
        background: var(--bg-secondary, #1f2937) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input {
        background: var(--bg-tertiary, #374151) !important;
        border-color: var(--border-color, #374151) !important;
        color: var(--text-primary, #f9fafb) !important;
    }

    .form-input-wrapper {
        position: relative;
    }

    .form-input-wrapper .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
        z-index: 2;
        font-size: 1.1rem;
        pointer-events: none; /* Prevent icon from interfering with input */
    }

    .form-input,
    .form-select {
        width: 100%;
        height: 48px;
        padding: 0.75rem 1rem 0.75rem 3rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
    }

    .form-select {
        padding-left: 3rem;
    }

    .form-input:focus,
    .form-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(19, 91, 236, 0.1);
        transform: translateY(-1px);
    }

    .form-input:focus ~ .input-icon,
    .form-input:not(:placeholder-shown) ~ .input-icon,
    .form-select:focus ~ .input-icon {
        color: var(--primary);
    }

    .captcha-wrapper {
        display: flex;
        gap: 0.75rem;
        align-items: flex-start;
    }

    .captcha-input {
        flex: 1;
    }

    .captcha-image-wrapper {
        position: relative;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
    }

    .captcha-image-wrapper:hover {
        border-color: var(--primary);
        transform: scale(1.02);
    }

    .captcha-image-wrapper img {
        display: block;
        height: 48px;
        width: 150px;
    }

    .captcha-refresh {
        position: absolute;
        top: 0.25rem;
        right: 0.25rem;
        width: 20px;
        height: 20px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.7rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .captcha-image-wrapper:hover .captcha-refresh {
        opacity: 1;
    }

    .btn-register {
        width: 100%;
        height: 52px;
        background: var(--gradient);
        border: none;
        border-radius: 0.75rem;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-register::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .btn-register:hover::before {
        left: 100%;
    }

    .btn-register:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .signin-link {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .signin-link a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        margin-left: 0.25rem;
    }

    .alert {
        border-radius: 0.75rem;
        border: none;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
    }
    </style>
</head>
<body>
<!-- No header or footer - standalone register page -->
<div class="register-container">
    <div class="register-card">
        <div class="brand-section">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-inline-flex align-items-center gap-2 mb-3">
                <div class="brand-logo">
                    <span class="material-symbols-outlined">directions_car</span>
                </div>
                <span class="text-primary fw-bold" style="font-size: 1.5rem;">CARental</span>
            </a>
            <h1 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">Create Your Account</h1>
            <p class="text-muted mb-0 small">Join us to start your next journey</p>
        </div>

        <div class="form-section">
            @if (TempData["ErrorMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger d-flex align-items-start alert-dismissible fade show">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">error</span>
                    <div class="flex-grow-1">@TempData["ErrorMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-start">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">check_circle</span>
                    <div>@TempData["SuccessMessage"]</div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Register" method="post" enctype="multipart/form-data" id="register-form">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: @(ViewData.ModelState.ErrorCount > 0 ? "block" : "none");"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-input-group">
                            <label asp-for="FirstName">First Name *</label>
                            <div class="form-input-wrapper">
                                <input asp-for="FirstName" class="form-input" placeholder="First Name" required />
                                <span class="material-symbols-outlined input-icon">person</span>
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-input-group">
                            <label asp-for="LastName">Last Name *</label>
                            <div class="form-input-wrapper">
                                <input asp-for="LastName" class="form-input" placeholder="Last Name" required />
                                <span class="material-symbols-outlined input-icon">person</span>
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-input-group">
                    <label asp-for="Email">Email Address *</label>
                    <div class="form-input-wrapper">
                        <input asp-for="Email" class="form-input" type="email" placeholder="you@example.com" required />
                        <span class="material-symbols-outlined input-icon">mail</span>
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-input-group">
                            <label asp-for="Password">Password *</label>
                            <div class="form-input-wrapper">
                                <input asp-for="Password" 
                                       class="form-input" 
                                       type="password" 
                                       placeholder="Create a strong password" 
                                       required 
                                       minlength="6"
                                       id="passwordInput" />
                                <span class="material-symbols-outlined input-icon">lock</span>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <small class="text-muted d-block mt-1">
                                <span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">info</span>
                                Must be at least 6 characters with uppercase, lowercase, and number
                            </small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-input-group">
                            <label asp-for="ConfirmPassword">Confirm Password *</label>
                            <div class="form-input-wrapper">
                                <input asp-for="ConfirmPassword" 
                                       class="form-input" 
                                       type="password" 
                                       placeholder="Confirm your password" 
                                       required 
                                       id="confirmPasswordInput" />
                                <span class="material-symbols-outlined input-icon">lock</span>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-input-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <div class="form-input-wrapper">
                                <input asp-for="PhoneNumber" class="form-input" type="tel" placeholder="+60 123456789" />
                        <span class="material-symbols-outlined input-icon">phone</span>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-input-group">
                            <label asp-for="DateOfBirth">Date of Birth</label>
                            <div class="form-input-wrapper">
                                <input asp-for="DateOfBirth" class="form-input" type="date" />
                                <span class="material-symbols-outlined input-icon">calendar_today</span>
                            </div>
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-input-group">
                            <label asp-for="LicenseNumber">Driver's License</label>
                            <div class="form-input-wrapper">
                                <input asp-for="LicenseNumber" class="form-input" placeholder="License Number" />
                                <span class="material-symbols-outlined input-icon">badge</span>
                            </div>
                            <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-input-group">
                    <label asp-for="Address">Address</label>
                    <div class="form-input-wrapper">
                        <input asp-for="Address" class="form-input" placeholder="Street Address" />
                        <span class="material-symbols-outlined input-icon">home</span>
                    </div>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-input-group">
                            <label asp-for="City">City</label>
                            <div class="form-input-wrapper">
                                <input asp-for="City" class="form-input" placeholder="City" />
                                <span class="material-symbols-outlined input-icon">location_city</span>
                            </div>
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-input-group">
                            <label asp-for="State">State</label>
                            <div class="form-input-wrapper">
                                <select asp-for="State" class="form-select">
                                    <option value="">-- Select State --</option>
                                    <option value="Johor">Johor</option>
                                    <option value="Kedah">Kedah</option>
                                    <option value="Kelantan">Kelantan</option>
                                    <option value="Kuala Lumpur">Kuala Lumpur</option>
                                    <option value="Labuan">Labuan</option>
                                    <option value="Malacca">Malacca</option>
                                    <option value="Negeri Sembilan">Negeri Sembilan</option>
                                    <option value="Pahang">Pahang</option>
                                    <option value="Penang">Penang</option>
                                    <option value="Perak">Perak</option>
                                    <option value="Perlis">Perlis</option>
                                    <option value="Putrajaya">Putrajaya</option>
                                    <option value="Sabah">Sabah</option>
                                    <option value="Sarawak">Sarawak</option>
                                    <option value="Selangor">Selangor</option>
                                    <option value="Terengganu">Terengganu</option>
                                </select>
                                <span class="material-symbols-outlined input-icon">map</span>
                            </div>
                            <span asp-validation-for="State" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-input-group">
                            <label asp-for="ZipCode">Zip Code</label>
                            <div class="form-input-wrapper">
                                <input asp-for="ZipCode" class="form-input" placeholder="Postal Code" />
                                <span class="material-symbols-outlined input-icon">markunread_mailbox</span>
                            </div>
                            <span asp-validation-for="ZipCode" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="form-input-group">
                    <label asp-for="CaptchaCode">CAPTCHA Code *</label>
                    <div class="captcha-wrapper">
                        <div class="captcha-input">
                            <input asp-for="CaptchaCode" 
                                   class="form-input" 
                                   placeholder="Enter CAPTCHA" 
                                   required 
                                   maxlength="5"
                                   autocomplete="off"
                                   style="text-transform: uppercase;" />
                        </div>
                        <div class="captcha-image-wrapper" onclick="refreshCaptcha()" title="Click to refresh">
                            <img id="captchaImage" 
                                 src="/Captcha/Generate?type=register&t=@DateTime.UtcNow.Ticks" 
                                 alt="CAPTCHA" 
                                 onerror="this.src='/Captcha/Generate?type=register&t=' + new Date().getTime();" />
                            <div class="captcha-refresh">
                                <span class="material-symbols-outlined" style="font-size: 14px;">refresh</span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="CaptchaCode" class="text-danger small d-block mt-1"></span>
                    <small class="text-muted d-block mt-1">
                        <span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">info</span>
                        Click on the image to refresh CAPTCHA
                    </small>
                </div>

                <button type="submit" class="btn-register">
                    <span class="d-flex align-items-center justify-content-center">
                        <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">person_add</span>
                        Create Account
                    </span>
                </button>
            </form>

            <div class="signin-link">
                Already have an account? <a asp-action="Login">Sign In</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/zxcvbn@4.4.2/dist/zxcvbn.js"></script>
<script>
        function refreshCaptcha() {
            const img = document.getElementById('captchaImage');
            if (img) {
                const timestamp = new Date().getTime();
                img.src = '/Captcha/Generate?type=register&t=' + timestamp;
                
                img.style.opacity = '0.5';
                img.onload = function() {
                    img.style.opacity = '1';
                };
                
                const captchaInput = document.querySelector('input[name="CaptchaCode"]');
                if (captchaInput) {
                    captchaInput.value = '';
                    captchaInput.focus();
                    // Auto-uppercase CAPTCHA input
                    captchaInput.addEventListener('input', function() {
                        this.value = this.value.toUpperCase();
                    });
                }
            }
        }

        // Password strength meter
        function checkPasswordStrength(password) {
            if (!password) return { strength: 0, text: '', color: '' };
            
            let strength = 0;
            if (password.length >= 8) strength++;
            // Check for lowercase and uppercase without regex
            let hasLowercase = false;
            let hasUppercase = false;
            let hasDigit = false;
            let hasSpecial = false;
            for (let i = 0; i < password.length; i++) {
                const char = password[i];
                if (char >= 'a' && char <= 'z') hasLowercase = true;
                if (char >= 'A' && char <= 'Z') hasUppercase = true;
                if (char >= '0' && char <= '9') hasDigit = true;
                if (!(char >= 'a' && char <= 'z') && !(char >= 'A' && char <= 'Z') && !(char >= '0' && char <= '9')) {
                    hasSpecial = true;
                }
            }
            if (hasLowercase && hasUppercase) strength++;
            if (hasDigit) strength++;
            if (hasSpecial) strength++;
            if (password.length >= 12) strength++;
            
            const levels = [
                { text: 'Very Weak', color: '#ef4444' },
                { text: 'Weak', color: '#f97316' },
                { text: 'Fair', color: '#eab308' },
                { text: 'Good', color: '#22c55e' },
                { text: 'Strong', color: '#10b981' },
                { text: 'Very Strong', color: '#059669' }
            ];
            
            return {
                strength: Math.min(strength, 5),
                text: levels[Math.min(strength, 5)].text,
                color: levels[Math.min(strength, 5)].color
            };
        }

        // Real-time form validation
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.register-card');
            if (card) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100);
            }

            // Password strength indicator
            const passwordInput = document.querySelector('input[name="Password"]');
            const confirmPasswordInput = document.querySelector('input[name="ConfirmPassword"]');
            
            if (passwordInput) {
                // Create strength meter
                const strengthMeter = document.createElement('div');
                strengthMeter.id = 'passwordStrength';
                strengthMeter.className = 'mt-2';
                strengthMeter.style.cssText = 'display: none; margin-top: 0.5rem;';
                passwordInput.parentElement.appendChild(strengthMeter);
                
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    if (password) {
                        const result = checkPasswordStrength(password);
                        strengthMeter.style.display = 'block';
                        strengthMeter.innerHTML = `
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="fw-medium" style="color: ${result.color};">Password Strength: ${result.text}</small>
                                <small style="color: ${result.color};">${result.strength}/5</small>
                            </div>
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar" style="width: ${(result.strength / 5) * 100}%; background-color: ${result.color};"></div>
                            </div>
                        `;
                    } else {
                        strengthMeter.style.display = 'none';
                    }
                });

                // Password visibility toggle - fix position to prevent dropdown
                if (!passwordInput.parentElement.querySelector('.password-toggle')) {
                    const toggleBtn = document.createElement('button');
                    toggleBtn.type = 'button';
                    toggleBtn.className = 'password-toggle';
                    toggleBtn.style.cssText = 'position: absolute; right: 1rem; top: 50%; transform: translateY(-50%); background: none; border: none; color: #9ca3af; cursor: pointer; z-index: 10; padding: 0.25rem; display: flex; align-items: center; justify-content: center;';
                    toggleBtn.innerHTML = '<span class="material-symbols-outlined" style="font-size: 1.25rem;">visibility</span>';
                    
                    toggleBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                        passwordInput.setAttribute('type', type);
                        this.querySelector('span').textContent = type === 'password' ? 'visibility' : 'visibility_off';
                    });
                    
                    if (passwordInput.parentElement) {
                        passwordInput.parentElement.style.position = 'relative';
                        passwordInput.parentElement.appendChild(toggleBtn);
                        // Adjust padding for password input to make room for toggle
                        passwordInput.style.paddingRight = '3rem';
                    }
                }
                
                // Same for confirm password
                if (confirmPasswordInput && !confirmPasswordInput.parentElement.querySelector('.password-toggle')) {
                    const toggleBtn = document.createElement('button');
                    toggleBtn.type = 'button';
                    toggleBtn.className = 'password-toggle';
                    toggleBtn.style.cssText = 'position: absolute; right: 1rem; top: 50%; transform: translateY(-50%); background: none; border: none; color: #9ca3af; cursor: pointer; z-index: 10; padding: 0.25rem; display: flex; align-items: center; justify-content: center;';
                    toggleBtn.innerHTML = '<span class="material-symbols-outlined" style="font-size: 1.25rem;">visibility</span>';
                    
                    toggleBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                        confirmPasswordInput.setAttribute('type', type);
                        this.querySelector('span').textContent = type === 'password' ? 'visibility' : 'visibility_off';
                    });
                    
                    if (confirmPasswordInput.parentElement) {
                        confirmPasswordInput.parentElement.style.position = 'relative';
                        confirmPasswordInput.parentElement.appendChild(toggleBtn);
                        confirmPasswordInput.style.paddingRight = '3rem';
                    }
                }
            }

            // Confirm password match check
            if (confirmPasswordInput && passwordInput) {
                confirmPasswordInput.addEventListener('input', function() {
                    const password = passwordInput.value;
                    const confirm = this.value;
                    
                    if (confirm) {
                        if (password === confirm) {
                            this.classList.remove('is-invalid');
                            this.classList.add('is-valid');
                            
                            // Remove existing match message
                            const existingMsg = this.parentElement.querySelector('.password-match');
                            if (existingMsg) existingMsg.remove();
                            
                            // Add success message
                            const matchMsg = document.createElement('div');
                            matchMsg.className = 'password-match text-success small mt-1';
                            matchMsg.innerHTML = '<span class="material-symbols-outlined" style="font-size: 14px; vertical-align: middle;">check_circle</span> Passwords match';
                            this.parentElement.appendChild(matchMsg);
                        } else {
                            this.classList.remove('is-valid');
                            this.classList.add('is-invalid');
                            
                            const existingMsg = this.parentElement.querySelector('.password-match');
                            if (existingMsg) existingMsg.remove();
                            
                            const matchMsg = document.createElement('div');
                            matchMsg.className = 'password-match text-danger small mt-1';
                            matchMsg.innerHTML = '<span class="material-symbols-outlined" style="font-size: 14px; vertical-align: middle;">error</span> Passwords do not match';
                            this.parentElement.appendChild(matchMsg);
                        }
                    } else {
                        this.classList.remove('is-valid', 'is-invalid');
                        const existingMsg = this.parentElement.querySelector('.password-match');
                        if (existingMsg) existingMsg.remove();
                    }
                });
            }

            // Email validation with auto-lowercase and duplicate check
            const emailInput = document.querySelector('input[name="Email"]');
            if (emailInput) {
                let emailCheckTimeout;
                
                emailInput.addEventListener('input', function() {
                    // Auto-lowercase email
                    this.value = this.value.toLowerCase();
                    
                    // Clear previous timeout
                    clearTimeout(emailCheckTimeout);
                    
                    // Remove previous validation feedback
                    this.classList.remove('is-invalid', 'is-valid');
                    const existingFeedback = this.parentElement.querySelector('.email-feedback');
                    if (existingFeedback) {
                        existingFeedback.remove();
                    }
                });
                
                emailInput.addEventListener('blur', function() {
                    const email = this.value.trim();
                    // Simple email validation without regex to avoid Razor parsing issues
                    const atChar = String.fromCharCode(64);
                    const dotChar = String.fromCharCode(46);
                    const spaceChar = String.fromCharCode(32);
                    const isValidEmail = email && email.includes(atChar) && email.includes(dotChar) && 
                                         email.indexOf(atChar) > 0 && email.indexOf(atChar) < email.lastIndexOf(dotChar) &&
                                         email.lastIndexOf(dotChar) < email.length - 1 && 
                                         !email.includes(spaceChar) && email.length > 5;
                    
                    if (email && !isValidEmail) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                        showFieldError(this, 'Please enter a valid email address.');
                    } else if (email) {
                        // Check if email already exists
                        emailCheckTimeout = setTimeout(async () => {
                            try {
                                const response = await fetch(`/Account/CheckEmailExists?email=${encodeURIComponent(email)}`);
                                const data = await response.json();
                                
                                if (data.exists) {
                                    this.classList.add('is-invalid');
                                    this.classList.remove('is-valid');
                                    showFieldError(this, 'This email is already registered. Please use a different email.');
                                } else {
                                    this.classList.remove('is-invalid');
                                    this.classList.add('is-valid');
                                    removeFieldError(this);
                                }
                            } catch (error) {
                                console.error('Error checking email:', error);
                            }
                        }, 500); // Wait 500ms after user stops typing
                    }
                });
            }
            
            // CAPTCHA auto-uppercase
            const captchaInput = document.querySelector('input[name="CaptchaCode"]');
            if (captchaInput) {
                captchaInput.addEventListener('input', function() {
                    this.value = this.value.toUpperCase();
                });
            }

            // Phone number validation with duplicate check
            const phoneInput = document.querySelector('input[name="PhoneNumber"]');
            if (phoneInput) {
                let phoneCheckTimeout;
                
                phoneInput.addEventListener('input', function() {
                    // Clear previous timeout
                    clearTimeout(phoneCheckTimeout);
                    
                    // Remove previous validation feedback
                    this.classList.remove('is-invalid', 'is-valid');
                    const existingFeedback = this.parentElement.querySelector('.phone-feedback');
                    if (existingFeedback) {
                        existingFeedback.remove();
                    }
                    
                    // Format: +60 followed by 9 digits (total 12 characters: +60 + 9 digits)
                    let phone = this.value.replace(/\D/g, '');
                    
                    // If starts with 60, ensure it's +60 format
                    if (phone.startsWith('60') && phone.length >= 10) {
                        phone = '60' + phone.substring(2);
                        this.value = '+' + phone.substring(0, 2) + ' ' + phone.substring(2);
                    } else if (phone.startsWith('60') && phone.length < 10) {
                        // Keep as +60, user is still typing
                        this.value = '+60 ' + phone.substring(2);
                    } else if (!this.value.startsWith('+60')) {
                        // Auto-add +60 prefix if not present
                        if (phone.length > 0 && !phone.startsWith('60')) {
                            phone = '60' + phone;
                        }
                        this.value = '+60 ' + phone.substring(2);
                    }
                    
                    // Validate: +60 followed by exactly 9 digits
                    phone = phone.replace(/\D/g, '');
                    if (phone.length > 0) {
                        if (!phone.startsWith('60')) {
                            this.classList.add('is-invalid');
                            this.classList.remove('is-valid');
                            showFieldError(this, 'Phone number must start with +60.');
                        } else if (phone.length < 11) { // 60 + 9 digits = 11
                            this.classList.add('is-invalid');
                            this.classList.remove('is-valid');
                            showFieldError(this, 'Phone number must be +60 followed by 9 digits.');
                        } else if (phone.length > 11) {
                            this.classList.add('is-invalid');
                            this.classList.remove('is-valid');
                            showFieldError(this, 'Phone number must be +60 followed by exactly 9 digits.');
                        }
                    }
                });
                
                phoneInput.addEventListener('blur', function() {
                    let phone = this.value.trim();
                    
                    // Format: +60 followed by 9 digits
                    phone = phone.replace(/\D/g, '');
                    
                    // Ensure +60 format
                    if (!phone.startsWith('60')) {
                        phone = '60' + phone;
                    }
                    
                    // Validate format: +60 + 9 digits = 11 digits total
                    if (phone.length === 11 && phone.startsWith('60')) {
                        // Format display: +60 123456789
                        const digits = phone.substring(2);
                        this.value = '+60 ' + digits;
                        
                        // Check if phone already exists (send normalized version)
                        phoneCheckTimeout = setTimeout(async () => {
                            try {
                                const response = await fetch(`/Account/CheckPhoneExists?phoneNumber=${encodeURIComponent(phone)}`);
                                const data = await response.json();
                                
                                if (data.exists) {
                                    this.classList.add('is-invalid');
                                    this.classList.remove('is-valid');
                                    showFieldError(this, 'This phone number is already registered. Please use a different phone number.');
                                } else {
                                    this.classList.remove('is-invalid');
                                    this.classList.add('is-valid');
                                    removeFieldError(this);
                                }
                            } catch (error) {
                                console.error('Error checking phone:', error);
                            }
                        }, 500);
                    } else if (phone.length > 0) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                        showFieldError(this, 'Phone number must be +60 followed by exactly 9 digits.');
                    }
                });
            }
            
            // Name validation with duplicate check
            const firstNameInput = document.querySelector('input[name="FirstName"]');
            const lastNameInput = document.querySelector('input[name="LastName"]');
            let nameCheckTimeout;
            
            function checkNameExists() {
                clearTimeout(nameCheckTimeout);
                const firstName = firstNameInput?.value.trim() || '';
                const lastName = lastNameInput?.value.trim() || '';
                
                // Remove previous validation feedback
                if (firstNameInput) {
                    firstNameInput.classList.remove('is-invalid', 'is-valid');
                    const existingFeedback = firstNameInput.parentElement.querySelector('.name-feedback');
                    if (existingFeedback) {
                        existingFeedback.remove();
                    }
                }
                
                if (firstName && lastName) {
                    nameCheckTimeout = setTimeout(async () => {
                        try {
                            const response = await fetch(`/Account/CheckNameExists?firstName=${encodeURIComponent(firstName)}&lastName=${encodeURIComponent(lastName)}`);
                            const data = await response.json();
                            
                            if (data.exists) {
                                if (firstNameInput) {
                                    firstNameInput.classList.add('is-invalid');
                                    firstNameInput.classList.remove('is-valid');
                                    showFieldError(firstNameInput, 'A user with this first name and last name combination already exists. Please use a different name.');
                                }
                                if (lastNameInput) {
                                    lastNameInput.classList.add('is-invalid');
                                    lastNameInput.classList.remove('is-valid');
                                }
                            } else {
                                if (firstNameInput) {
                                    firstNameInput.classList.remove('is-invalid');
                                    firstNameInput.classList.add('is-valid');
                                    removeFieldError(firstNameInput);
                                }
                                if (lastNameInput) {
                                    lastNameInput.classList.remove('is-invalid');
                                    lastNameInput.classList.add('is-valid');
                                    removeFieldError(lastNameInput);
                                }
                            }
                        } catch (error) {
                            console.error('Error checking name:', error);
                        }
                    }, 800); // Wait 800ms after user stops typing
                }
            }
            
            if (firstNameInput) {
                firstNameInput.addEventListener('blur', checkNameExists);
            }
            
            if (lastNameInput) {
                lastNameInput.addEventListener('blur', checkNameExists);
            }
            
            // Helper functions for showing/removing field errors
            function showFieldError(input, message) {
                // Remove existing feedback
                removeFieldError(input);
                
                // Create feedback element
                const feedback = document.createElement('div');
                feedback.className = 'text-danger small mt-1';
                if (input.name === 'Email') {
                    feedback.className += ' email-feedback';
                } else if (input.name === 'PhoneNumber') {
                    feedback.className += ' phone-feedback';
                } else if (input.name === 'FirstName' || input.name === 'LastName') {
                    feedback.className += ' name-feedback';
                }
                feedback.textContent = message;
                input.parentElement.appendChild(feedback);
            }
            
            function removeFieldError(input) {
                let selector = '';
                if (input.name === 'Email') {
                    selector = '.email-feedback';
                } else if (input.name === 'PhoneNumber') {
                    selector = '.phone-feedback';
                } else if (input.name === 'FirstName' || input.name === 'LastName') {
                    selector = '.name-feedback';
                }
                
                if (selector) {
                    const existingFeedback = input.parentElement.querySelector(selector);
                    if (existingFeedback) {
                        existingFeedback.remove();
                    }
                }
            }

            // Form submission enhancement
            const registerForm = document.getElementById('register-form');
            if (registerForm) {
                registerForm.addEventListener('submit', function(e) {
                    const password = passwordInput?.value || '';
                    const confirm = confirmPasswordInput?.value || '';
                    
                    if (password !== confirm) {
                        e.preventDefault();
                        showError('Passwords do not match. Please check and try again.');
                        confirmPasswordInput?.focus();
                        return false;
                    }
                    
                    const strength = checkPasswordStrength(password);
                    if (strength.strength < 2) {
                        e.preventDefault();
                        showError('Password is too weak. Please use a stronger password.');
                        passwordInput?.focus();
                        return false;
                    }
                    
                    // Show loading state
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Creating Account...';
                    }
                });
            }

            // Auto-focus first empty field
            const inputs = document.querySelectorAll('input');
            let firstEmptyInput = null;
            for (let input of inputs) {
                if (!input.value || input.value === '') {
                    firstEmptyInput = input;
                    break;
                }
            }
            if (firstEmptyInput) {
                firstEmptyInput.focus();
            }
        });

        function showError(message) {
            const existingAlerts = document.querySelectorAll('.alert-danger');
            existingAlerts.forEach(alert => alert.remove());
            
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-danger alert-dismissible fade show';
            alertDiv.innerHTML = `
                <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">error</span>
                <strong>Error!</strong> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const formSection = document.querySelector('.form-section');
            if (formSection) {
                formSection.insertBefore(alertDiv, formSection.firstChild);
            }
        }
    </script>
