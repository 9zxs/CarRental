@model LoginViewModel
@{
    Layout = null; // Remove header and footer completely
    ViewData["Title"] = "CARental - Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
    :root {
        --primary: #135bec;
        --primary-dark: #0d4ab8;
        --primary-light: #4d7df0;
        --background-light: #f6f6f8;
        --background-dark: #101622;
        --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--background-light);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        z-index: 0;
    }

    .login-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 450px;
        padding: 1rem;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.5);
        overflow: hidden;
        position: relative;
    }

    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient);
    }

    .brand-section {
        text-align: center;
        padding: 2.5rem 2rem 2rem;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
    }

    .brand-logo {
        width: 64px;
        height: 64px;
        background: var(--gradient);
        border-radius: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        transition: transform 0.3s ease;
    }

    .brand-logo:hover {
        transform: scale(1.05) rotate(5deg);
    }

    .brand-logo .material-symbols-outlined {
        font-size: 2.5rem;
        color: white;
    }

    .form-section {
        padding: 2rem;
    }

    .form-input-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-input-group label {
        display: block;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input-group label,
    [data-theme="dark"] h1[style*="color"],
    [data-theme="dark"] h2[style*="color"] {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .login-card {
        background: var(--bg-secondary, #1f2937) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    [data-theme="dark"] .form-input {
        background: var(--bg-tertiary, #374151) !important;
        border-color: var(--border-color, #374151) !important;
        color: var(--text-primary, #f9fafb) !important;
    }

    .form-input-wrapper {
        position: relative;
    }

    .form-input-wrapper .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #9ca3af;
        z-index: 2;
    }

    .form-input {
        width: 100%;
        height: 52px;
        padding: 0.75rem 1rem 0.75rem 3rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        font-size: 0.95rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: white;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(19, 91, 236, 0.1);
        transform: translateY(-1px);
    }

    .form-input:focus + .input-icon,
    .form-input:not(:placeholder-shown) + .input-icon {
        color: var(--primary);
    }

    .captcha-wrapper {
        display: flex;
        gap: 0.75rem;
        align-items: flex-start;
    }

    .captcha-input {
        flex: 1;
    }

    .captcha-image-wrapper {
        position: relative;
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
    }

    .captcha-image-wrapper:hover {
        border-color: var(--primary);
        transform: scale(1.02);
    }

    .captcha-image-wrapper img {
        display: block;
        height: 52px;
        width: 150px;
    }

    .captcha-refresh {
        position: absolute;
        top: 0.25rem;
        right: 0.25rem;
        width: 20px;
        height: 20px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.7rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .captcha-image-wrapper:hover .captcha-refresh {
        opacity: 1;
    }

    .btn-login {
        width: 100%;
        height: 52px;
        background: var(--gradient);
        border: none;
        border-radius: 0.75rem;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-login::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .btn-login:hover::before {
        left: 100%;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-login:active {
        transform: translateY(0);
    }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 1.5rem 0;
        color: #9ca3af;
        font-size: 0.875rem;
    }

    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #e5e7eb;
    }

    .divider::before {
        margin-right: 0.75rem;
    }

    .divider::after {
        margin-left: 0.75rem;
    }

    .remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .custom-checkbox {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .custom-checkbox input[type="checkbox"] {
        width: 18px;
        height: 18px;
        margin-right: 0.5rem;
        cursor: pointer;
        accent-color: var(--primary);
    }

    .forgot-link {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.875rem;
        transition: color 0.2s ease;
    }

    .forgot-link:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }

    .signup-link {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .signup-link a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        margin-left: 0.25rem;
    }

    .signup-link a:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 0.75rem;
        border: none;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
    }
    </style>
</head>
<body>
<!-- No header or footer - standalone login page -->
<div class="login-container">
    <div class="login-card">
        <div class="brand-section">
            <div class="brand-logo">
                <span class="material-symbols-outlined">directions_car</span>
            </div>
            <h2 class="fw-bold mb-2" style="font-size: 1.75rem; color: #1f2937;">CARental</h2>
            <p class="text-muted mb-0 small">Premium Car Rental Experience</p>
        </div>

        <div class="form-section">
            <div class="text-center mb-4">
                <h1 class="fw-bold mb-2" style="font-size: 1.5rem; color: #1f2937;">Welcome Back</h1>
                <p class="text-muted mb-0" style="font-size: 0.875rem;">Sign in to your account to continue</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success d-flex align-items-start">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">check_circle</span>
                    <div>
                        <strong>Success!</strong>
                        <p class="mb-0 small">@TempData["SuccessMessage"]</p>
                    </div>
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger d-flex align-items-start alert-dismissible fade show">
                    <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">error</span>
                    <div class="flex-grow-1">
                        <strong>Error!</strong>
                        <p class="mb-0 small">@TempData["ErrorMessage"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Login" method="post" id="login-form">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div asp-validation-summary="All" class="alert alert-danger" style="display: @(ViewData.ModelState.ErrorCount > 0 ? "block" : "none");"></div>

                <div class="form-input-group">
                    <label asp-for="Email">Email Address</label>
                    <div class="form-input-wrapper">
                        <input asp-for="Email" 
                               class="form-input" 
                               placeholder="you@example.com" 
                               type="email" 
                               required />
                        <span class="material-symbols-outlined input-icon">mail</span>
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-input-group">
                    <label asp-for="Password">Password *</label>
                    <div class="form-input-wrapper">
                        <input asp-for="Password" 
                               class="form-input" 
                               placeholder="Enter your password" 
                               type="password" 
                               required 
                               autocomplete="current-password"
                               id="passwordInput" />
                        <span class="material-symbols-outlined input-icon">lock</span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                    <small class="text-muted d-block mt-1">
                        <a asp-action="ForgotPassword" class="text-decoration-none" style="color: var(--primary);">
                            <span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">help</span>
                            Forgot your password?
                        </a>
                    </small>
                </div>

                <div class="remember-forgot">
                    <label class="custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" checked />
                        <span>Remember me for 30 days</span>
                    </label>
                    <a asp-action="ForgotPassword" class="forgot-link">
                        <span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">lock_reset</span>
                        Forgot password?
                    </a>
                </div>

                <div class="form-input-group">
                    <label asp-for="CaptchaCode">CAPTCHA Code *</label>
                    <div class="captcha-wrapper">
                        <div class="captcha-input">
                            <input asp-for="CaptchaCode" 
                                   class="form-input" 
                                   placeholder="Enter CAPTCHA" 
                                   required 
                                   maxlength="5"
                                   autocomplete="off"
                                   style="text-transform: uppercase;" />
                        </div>
                        <div class="captcha-image-wrapper" onclick="refreshCaptcha()" title="Click to refresh">
                            <img id="captchaImage" 
                                 src="/Captcha/Generate?type=login&t=@DateTime.UtcNow.Ticks" 
                                 alt="CAPTCHA" 
                                 onerror="this.src='/Captcha/Generate?type=login&t=' + new Date().getTime();" />
                            <div class="captcha-refresh">
                                <span class="material-symbols-outlined" style="font-size: 14px;">refresh</span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="CaptchaCode" class="text-danger small d-block mt-1"></span>
                    <small class="text-muted d-block mt-1">
                        <span class="material-symbols-outlined me-1" style="font-size: 14px; vertical-align: middle;">info</span>
                        Click on the image to refresh CAPTCHA
                    </small>
                </div>

                <button type="submit" class="btn-login">
                    <span class="d-flex align-items-center justify-content-center">
                        <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">login</span>
                        Sign In
                    </span>
                </button>
            </form>

            <div class="signup-link">
                Don't have an account? <a asp-action="Register">Sign up</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
<script>
        function refreshCaptcha() {
            const img = document.getElementById('captchaImage');
            if (img) {
                // Add timestamp to prevent caching
                const timestamp = new Date().getTime();
                img.src = '/Captcha/Generate?type=login&t=' + timestamp;
                
                // Show loading state
                img.style.opacity = '0.5';
                img.onload = function() {
                    img.style.opacity = '1';
                };
                
                    // Clear and focus CAPTCHA input
                    const captchaInput = document.querySelector('input[name="CaptchaCode"]');
                    if (captchaInput) {
                        captchaInput.value = '';
                        captchaInput.focus();
                        // Auto-uppercase CAPTCHA input
                        captchaInput.addEventListener('input', function() {
                            this.value = this.value.toUpperCase();
                        });
                    }
            }
        }

        // Real-time email validation
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.login-card');
            if (card) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100);
            }

            // Email validation
            const emailInput = document.querySelector('input[name="Email"]');
            if (emailInput) {
                emailInput.addEventListener('input', function() {
                    // Auto-lowercase email
                    this.value = this.value.toLowerCase();
                });
                
                emailInput.addEventListener('blur', function() {
                    const email = this.value.trim();
                    // Simple email validation without regex to avoid Razor parsing issues
                    const atChar = String.fromCharCode(64);
                    const dotChar = String.fromCharCode(46);
                    const spaceChar = String.fromCharCode(32);
                    const isValidEmail = email && email.includes(atChar) && email.includes(dotChar) && 
                                         email.indexOf(atChar) > 0 && email.indexOf(atChar) < email.lastIndexOf(dotChar) &&
                                         email.lastIndexOf(dotChar) < email.length - 1 && 
                                         !email.includes(spaceChar) && email.length > 5;
                    
                    if (email && !isValidEmail) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else if (email) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            }

            // Password visibility toggle
            const passwordInput = document.querySelector('input[name="Password"]');
            if (passwordInput && !passwordInput.parentElement.querySelector('.password-toggle')) {
                const passwordWrapper = passwordInput.parentElement;
                const toggleBtn = document.createElement('button');
                toggleBtn.type = 'button';
                toggleBtn.className = 'password-toggle position-absolute';
                toggleBtn.style.cssText = 'right: 1rem; top: 50%; transform: translateY(-50%); background: none; border: none; color: #9ca3af; cursor: pointer; z-index: 3;';
                toggleBtn.innerHTML = '<span class="material-symbols-outlined">visibility</span>';
                
                toggleBtn.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    this.querySelector('span').textContent = type === 'password' ? 'visibility' : 'visibility_off';
                });
                
                passwordWrapper.style.position = 'relative';
                passwordWrapper.appendChild(toggleBtn);
            }

            // Form validation enhancement
            const loginForm = document.getElementById('login-form');
            if (loginForm) {
                loginForm.addEventListener('submit', function(e) {
                    const email = document.querySelector('input[name="Email"]').value.trim();
                    const password = document.querySelector('input[name="Password"]').value;
                    const captcha = document.querySelector('input[name="CaptchaCode"]').value.trim();
                    
                    if (!email) {
                        e.preventDefault();
                        showError('Please enter your email address.');
                        return false;
                    }
                    
                    if (!password) {
                        e.preventDefault();
                        showError('Please enter your password.');
                        return false;
                    }
                    
                    if (!captcha) {
                        e.preventDefault();
                        showError('Please enter the CAPTCHA code.');
                        return false;
                    }
                    
                    // Show loading state
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Signing In...';
                    }
                });
            }

            // CAPTCHA auto-uppercase
            const captchaInput = document.querySelector('input[name="CaptchaCode"]');
            if (captchaInput) {
                captchaInput.addEventListener('input', function() {
                    this.value = this.value.toUpperCase();
                });
            }

            // Auto-focus first empty field
            const inputs = document.querySelectorAll('input');
            let firstEmptyInput = null;
            for (let input of inputs) {
                if (!input.value || input.value === '') {
                    firstEmptyInput = input;
                    break;
                }
            }
            if (firstEmptyInput) {
                firstEmptyInput.focus();
            }
        });

        function showError(message) {
            // Remove existing error messages
            const existingAlerts = document.querySelectorAll('.alert-danger');
            existingAlerts.forEach(alert => alert.remove());
            
            // Create new error alert
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-danger alert-dismissible fade show';
            alertDiv.innerHTML = `
                <span class="material-symbols-outlined me-2" style="font-size: 1.25rem;">error</span>
                <strong>Error!</strong> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const formSection = document.querySelector('.form-section');
            if (formSection) {
                formSection.insertBefore(alertDiv, formSection.firstChild);
            }
        }
    </script>
</body>
</html>
