@model IEnumerable<Promotion>
@{
    ViewData["Title"] = "Promotions - Prestige Rentals";
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
        --secondary: #667eea;
        --success: #10b981;
        --warning: #f59e0b;
        --dark: #1f2937;
        --light: #f9fafb;
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--light);
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h1:not(.promotion-card h1):not(.hero-section h1):not(.promotion-header h1),
    [data-theme="dark"] h2:not(.promotion-card h2):not(.promotion-header h2),
    [data-theme="dark"] h3:not(.promotion-card h3):not(.promotion-header h3),
    [data-theme="dark"] p:not(.promotion-card p):not(.promotion-header p):not(.promotion-body p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White promotion cards in dark mode need dark text */
    [data-theme="dark"] .promotion-card {
        background: white !important;
    }
    
    [data-theme="dark"] .promotion-body {
        background: white !important;
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .promotion-body *:not(.material-symbols-outlined):not(.btn),
    [data-theme="dark"] .promotion-footer *:not(.material-symbols-outlined) {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .promotion-footer {
        background: #f9fafb !important;
        color: #6b7280 !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .promotion-body .discount-display {
        color: var(--success, #10b981) !important;
    }
    
    [data-theme="dark"] .promotion-body .code-input {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .promotion-body .code-input-group {
        background: #f9fafb !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .promotion-body .text-muted,
    [data-theme="dark"] .promotion-body label,
    [data-theme="dark"] .promotion-body .form-label,
    [data-theme="dark"] .promotion-body span:not(.promotion-header span):not(.material-symbols-outlined) {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .promotion-body .text-muted {
        color: #6b7280 !important;
    }
    
    [data-theme="dark"] .promotion-footer span:not(.material-symbols-outlined),
    [data-theme="dark"] .promotion-footer .info-item {
        color: #6b7280 !important;
    }
    
    /* Keep white text on colored headers */
    [data-theme="dark"] .promotion-header,
    [data-theme="dark"] .promotion-header *,
    [data-theme="dark"] .hero-section,
    [data-theme="dark"] .hero-section * {
        color: white !important;
    }

    .hero-section {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        padding: 4rem 0;
        margin-bottom: 3rem;
    }

    .promotion-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    .promotion-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .promotion-header {
        background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
        padding: 1.5rem;
        color: white;
        position: relative;
    }

    .promotion-header.ev-only {
        background: linear-gradient(135deg, var(--warning) 0%, #d97706 100%);
    }

    .promotion-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .promotion-body {
        padding: 2rem;
        background: white;
    }

    .discount-display {
        font-size: 3rem;
        font-weight: 800;
        color: var(--success);
        line-height: 1;
    }

    .code-input-group {
        background: var(--light);
        border-radius: 0.5rem;
        padding: 0.5rem;
        border: 2px solid #e5e7eb;
        transition: all 0.3s ease;
    }

    .code-input-group:focus-within {
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(19, 91, 236, 0.1);
    }

    .code-input {
        border: none;
        background: transparent;
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--dark);
        flex: 1;
        padding: 0.5rem;
    }

    .code-input:focus {
        outline: none;
    }

    .copy-btn {
        background: var(--primary);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .copy-btn:hover {
        background: #0f4ccc;
        transform: scale(1.05);
    }

    .copy-btn.copied {
        background: var(--success);
    }

    .promotion-footer {
        padding: 1rem 2rem;
        background: var(--light);
        border-top: 1px solid #e5e7eb;
        font-size: 0.875rem;
        color: #6b7280;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>
}

<div class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">Weekend Getaway Discount</h1>
        <p class="lead mb-0">Exclusive promotions and special offers just for you</p>
    </div>
</div>

<div class="container mb-5">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @{
        var promotions = Model?.ToList() ?? new List<Promotion>();
    }
    
    @if (!promotions.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            No active promotions at the moment. Check back soon!
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var promotion in promotions)
            {
                if (promotion == null) continue;
                
                <div class="col-md-6 col-lg-4">
                    <div class="promotion-card">
                        <div class="promotion-header @(promotion.IsEVOnly ? "ev-only" : "")">
                            <div class="promotion-badge">
                                @if (promotion.IsEVOnly)
                                {
                                    <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">bolt</span>
                                    <span>EV Only</span>
                                }
                                else
                                {
                                    <span>Special Offer</span>
                                }
                            </div>
                            <h3 class="mb-0 fw-bold">@(promotion.Name ?? "Promotion")</h3>
                            <p class="mb-0 mt-2 opacity-90">@(promotion.Description ?? "Special promotion offer")</p>
                        </div>
                        
                        <div class="promotion-body">
                            <div class="text-center mb-4">
                                <div class="discount-display">@promotion.DiscountPercentage.ToString("F2")%</div>
                                <div class="text-muted fw-medium">OFF</div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold text-dark mb-2">Promotion Code</label>
                                <div class="code-input-group d-flex align-items-center">
                                    <input type="text" 
                                           class="code-input" 
                                           value="@(promotion.Code ?? "")" 
                                           readonly 
                                           id="code-@promotion.Id">
                                    <button class="copy-btn" 
                                            type="button" 
                                            onclick="copyPromotionCode('code-@promotion.Id', this)">
                                        <span class="material-symbols-outlined me-1" style="font-size: 1.1rem;">content_copy</span>
                                        Copy
                                    </button>
                                </div>
                            </div>

                            <div class="promotion-footer">
                                <div class="d-flex flex-column gap-2">
                                    <div class="info-item">
                                        <span class="material-symbols-outlined" style="font-size: 1.1rem;">calendar_today</span>
                                        <span>Valid: @promotion.StartDate.ToString("MMM dd") - @promotion.EndDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    @if (promotion.MaxUses.HasValue)
                                    {
                                        var remaining = Math.Max(0, promotion.MaxUses.Value - promotion.CurrentUses);
                                        <div class="info-item">
                                            <span class="material-symbols-outlined" style="font-size: 1.1rem;">people</span>
                                            <span>@remaining uses remaining</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="info-item">
                                            <span class="material-symbols-outlined" style="font-size: 1.1rem;">all_inclusive</span>
                                            <span>Unlimited uses</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyPromotionCode(elementId, button) {
            const codeInput = document.getElementById(elementId);
            codeInput.select();
            codeInput.setSelectionRange(0, 99999);
            
            navigator.clipboard.writeText(codeInput.value).then(() => {
                const originalHTML = button.innerHTML;
                button.innerHTML = '<span class="material-symbols-outlined me-1" style="font-size: 1.1rem;">check</span>Copied!';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                    button.classList.remove('copied');
                }, 2000);
            }).catch(() => {
                // Fallback for older browsers
                document.execCommand('copy');
                const originalHTML = button.innerHTML;
                button.innerHTML = '<span class="material-symbols-outlined me-1" style="font-size: 1.1rem;">check</span>Copied!';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                    button.classList.remove('copied');
                }, 2000);
            });
        }
    </script>
}
