@using CarRentalSystem.Models
@model IEnumerable<Promotion>
@{
    ViewData["Title"] = "Manage Promotions - DriveLuxe";
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: #f9fafb;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h2:not(.card h2),
    [data-theme="dark"] h3:not(.card h3),
    [data-theme="dark"] h4:not(.card h4),
    [data-theme="dark"] h5:not(.card h5),
    [data-theme="dark"] p:not(.card p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White cards in dark mode need dark text */
    [data-theme="dark"] .card,
    [data-theme="dark"] .card-body,
    [data-theme="dark"] .card-header,
    [data-theme="dark"] .table-responsive,
    [data-theme="dark"] .table,
    [data-theme="dark"] .table-light,
    [data-theme="dark"] .table thead,
    [data-theme="dark"] .table tbody {
        background-color: white !important;
        color: #1f2937 !important;
        border-color: #e5e7eb !important;
    }
    
    [data-theme="dark"] .card *,
    [data-theme="dark"] .table th,
    [data-theme="dark"] .table td,
    [data-theme="dark"] .table-light th,
    [data-theme="dark"] .table-light td {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .table .text-muted,
    [data-theme="dark"] .table td.text-muted,
    [data-theme="dark"] .table td.text-center.text-muted {
        color: #6b7280 !important;
    }
</style>
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <span class="material-symbols-outlined me-2" style="vertical-align: middle;">local_offer</span>
            Manage Promotions
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
            Create Promotion
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span class="material-symbols-outlined me-2" style="font-size: 1rem; vertical-align: middle;">check_circle</span>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span class="material-symbols-outlined me-2" style="font-size: 1rem; vertical-align: middle;">error</span>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Code</th>
                            <th>Discount</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Uses</th>
                            <th>EV Only</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var promotion in Model)
                        {
                            var isExpired = DateTime.UtcNow > promotion.EndDate;
                            var isActive = promotion.IsActive && !isExpired && (promotion.MaxUses == null || promotion.CurrentUses < promotion.MaxUses);
                            <tr>
                                <td>
                                    <div class="fw-medium">@promotion.Name</div>
                                    @if (!string.IsNullOrEmpty(promotion.Description))
                                    {
                                        <small class="text-muted">@promotion.Description</small>
                                    }
                                </td>
                                <td>
                                    <code class="bg-light px-2 py-1 rounded">@promotion.Code</code>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">@promotion.DiscountPercentage%</span>
                                    @if (promotion.MaxDiscountAmount.HasValue)
                                    {
                                        <small class="text-muted d-block">Max: RM @promotion.MaxDiscountAmount.Value.ToString("N2")</small>
                                    }
                                </td>
                                <td>@promotion.StartDate.ToString("MMM dd, yyyy")</td>
                                <td>@promotion.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (promotion.MaxUses.HasValue)
                                    {
                                        <span>@promotion.CurrentUses / @promotion.MaxUses</span>
                                    }
                                    else
                                    {
                                        <span>@promotion.CurrentUses (Unlimited)</span>
                                    }
                                </td>
                                <td>
                                    @if (promotion.IsEVOnly)
                                    {
                                        <span class="badge bg-info">EV Only</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">All Cars</span>
                                    }
                                </td>
                                <td>
                                    @if (isActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else if (isExpired)
                                    {
                                        <span class="badge bg-secondary">Expired</span>
                                    }
                                    else if (!promotion.IsActive)
                                    {
                                        <span class="badge bg-warning text-dark">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Used Up</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@promotion.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <span class="material-symbols-outlined" style="font-size: 1rem;">edit</span>
                                        </a>
                                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@promotion.Id" />
                                            <button type="submit" class="btn btn-sm @(promotion.IsActive ? "btn-outline-warning" : "btn-outline-success")" title="@(promotion.IsActive ? "Deactivate" : "Activate")">
                                                <span class="material-symbols-outlined" style="font-size: 1rem;">@(promotion.IsActive ? "block" : "check_circle")</span>
                                            </button>
                                        </form>
                                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this promotion?');">
                                            <input type="hidden" name="id" value="@promotion.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <span class="material-symbols-outlined" style="font-size: 1rem;">delete</span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5 text-muted">
                                    <span class="material-symbols-outlined mb-2" style="font-size: 3rem; opacity: 0.5;">local_offer</span>
                                    <div>No promotions found</div>
                                    <a asp-action="Create" class="btn btn-primary mt-3">
                                        <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">add</span>
                                        Create First Promotion
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

