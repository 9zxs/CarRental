@model IEnumerable<Car>
@{
    ViewData["Title"] = "Car Rental EV Hub";
}

@section Styles {
<style>
    :root {
        --primary: #135bec;
        --success: #10b981;
        --warning: #f59e0b;
        --dark: #1f2937;
        --light: #f9fafb;
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background: var(--light);
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    /* Dark mode support */
    [data-theme="dark"] body {
        background: var(--bg-primary, #030712) !important;
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* Page headers outside cards remain light */
    [data-theme="dark"] h1:not(.stats-card h1):not(.car-card h1):not(.hero-section h1),
    [data-theme="dark"] h2:not(.stats-card h2):not(.car-card h2),
    [data-theme="dark"] p:not(.stats-card p):not(.car-card p):not(.hero-section p) {
        color: var(--text-primary, #f9fafb) !important;
    }
    
    /* CRITICAL: White cards in dark mode need dark text */
    [data-theme="dark"] .stats-card {
        background: white !important;
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .stats-card * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .stats-number {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .stats-card .text-muted {
        color: #6b7280 !important;
    }
    
    [data-theme="dark"] .car-card {
        background: white !important;
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .car-card * {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .spec-value {
        color: #1f2937 !important;
    }
    
    [data-theme="dark"] .spec-label {
        color: #6b7280 !important;
    }
    
    [data-theme="dark"] .car-card .text-muted {
        color: #6b7280 !important;
    }

    .hero-section {
        background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
        color: white;
        padding: 4rem 0;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .stats-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        height: 100%;
    }

    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    .stats-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: var(--success);
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }

    .car-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        height: 100%;
        background: white;
    }

    .car-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }

    .car-image {
        position: relative;
        height: 250px;
        overflow: hidden;
    }

    .car-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .car-card:hover .car-image img {
        transform: scale(1.1);
    }

    .ev-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--success);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.875rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .car-body {
        padding: 1.5rem;
    }

    .car-specs {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
        margin: 1rem 0;
    }

    .spec-item {
        text-align: center;
        padding: 0.75rem;
        background: var(--light);
        border-radius: 0.5rem;
    }

    .spec-icon {
        font-size: 1.5rem;
        color: var(--success);
        margin-bottom: 0.25rem;
    }

    .spec-value {
        font-weight: 700;
        color: var(--dark);
        font-size: 1.1rem;
    }

    .spec-label {
        font-size: 0.75rem;
        color: #6b7280;
    }

    .car-price {
        font-size: 2rem;
        font-weight: 800;
        color: var(--primary);
    }
</style>
}

<div class="hero-section">
    <div class="container hero-content">
        <div class="text-center mb-4">
            <span class="material-symbols-outlined mb-3" style="font-size: 4rem;">bolt</span>
            <h1 class="display-4 fw-bold mb-3">Electric Vehicle Hub</h1>
            <p class="lead mb-0">Discover our premium electric vehicle fleet. Drive green, drive smart.</p>
        </div>
    </div>
</div>

<div class="container mb-5">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @{
        var evCars = Model?.ToList() ?? new List<Car>();
    }
    
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="stats-card">
                <span class="material-symbols-outlined stats-icon">directions_car</span>
                <div class="stats-number">@evCars.Count</div>
                <div class="text-muted">EV Models</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <span class="material-symbols-outlined stats-icon" style="color: var(--success);">eco</span>
                <div class="stats-number">100%</div>
                <div class="text-muted">Eco-Friendly</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <span class="material-symbols-outlined stats-icon" style="color: var(--warning);">bolt</span>
                <div class="stats-number">Fast</div>
                <div class="text-muted">Charging</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <span class="material-symbols-outlined stats-icon" style="color: var(--primary);">savings</span>
                <div class="stats-number">Save</div>
                <div class="text-muted">On Fuel</div>
            </div>
        </div>
    </div>

    @if (!evCars.Any())
    {
        <div class="alert alert-info text-center">
            <span class="material-symbols-outlined me-2">info</span>
            No electric vehicles available at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var car in evCars)
            {
                if (car == null) continue;
                
                <div class="col-md-6 col-lg-4">
                    <div class="car-card">
                        <div class="car-image">
                            <img src="@(car.ImageUrl ?? "https://via.placeholder.com/400x250?text=EV")" 
                                 alt="@(car.DisplayName ?? "Electric Vehicle")">
                            <div class="ev-badge">
                                <span class="material-symbols-outlined me-1" style="font-size: 1rem; vertical-align: middle;">bolt</span>
                                Electric
                            </div>
                        </div>
                        <div class="car-body">
                            <h5 class="fw-bold mb-2">@(car.Year) @(car.Make ?? "") @(car.Model ?? "")</h5>
                            <p class="text-muted small mb-3">@(car.Color ?? "N/A")</p>
                            <p class="mb-3">@(car.Description ?? "Premium electric vehicle")</p>
                            
                            <div class="car-specs">
                                <div class="spec-item">
                                    <span class="material-symbols-outlined spec-icon">battery_charging_full</span>
                                    <div class="spec-value">@(car.BatteryCapacity?.ToString() ?? "N/A")</div>
                                    <div class="spec-label">kWh</div>
                                </div>
                                <div class="spec-item">
                                    <span class="material-symbols-outlined spec-icon">route</span>
                                    <div class="spec-value">@(car.Range?.ToString() ?? "N/A")</div>
                                    <div class="spec-label">mi</div>
                                </div>
                                <div class="spec-item">
                                    <span class="material-symbols-outlined spec-icon">schedule</span>
                                    <div class="spec-value">@(car.ChargingTime?.ToString() ?? "N/A")</div>
                                    <div class="spec-label">min</div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <div>
                                    <span class="car-price">$@car.DailyRate.ToString("F2")</span>
                                    <span class="text-muted">/day</span>
                                </div>
                                <div class="d-flex gap-2">
                                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" 
                                       class="btn btn-outline-primary btn-sm">
                                        Details
                                    </a>
                                    @if (car.IsAvailable)
                                    {
                                        <a asp-controller="Appointments" asp-action="Create" asp-route-carId="@car.Id" 
                                           class="btn btn-success btn-sm">
                                            Book
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
